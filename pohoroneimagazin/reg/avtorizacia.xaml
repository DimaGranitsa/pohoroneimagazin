<Page x:Class="pohoroneimagazin.reg.avtorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pohoroneimagazin.reg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtorizacia">

    <Grid>

        <Border Background="Gray" CornerRadius="40" Margin="18,16,22,24">
            <StackPanel Margin="40">
                <Label Content="Регистрация нового пользовотеля " Foreground="White" FontSize="30" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label Content="username" Foreground="White" />
                <TextBox Name="txtUsername" Background="Black" FontSize="30" Foreground="White"></TextBox>
                <Label Content="password" Foreground="White" />

                <PasswordBox Name="txtpassword" Background="Black" FontSize="30" Foreground="White"></PasswordBox>
                <Button Name="vhodvkobinet" Content="зарегистрировать" Margin="40 20" Background="Black" FontSize="19" Foreground="White" ></Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
